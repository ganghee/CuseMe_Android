<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.download_card.DownloadCardActivity">


    <Button
        android:id="@+id/btnDownBack"
        android:layout_width="13dp"
        android:layout_height="22dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tvDownTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/notosans_regular"
        android:lineSpacingExtra="4sp"
        android:text="@string/btn_down_title"
        android:textAlignment="center"
        android:textColor="@color/greyish_brown"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDownBack" />


    <EditText
        android:id="@+id/edtDownkInputCardNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="85dp"
        android:colorControlActivated="#fb6d6a"
        android:colorControlNormal="#bebebe"
        android:ems="10"
        android:hint="@string/edt_down_input_cardnum"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingVertical="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDownTitle"
        app:layout_constraintVertical_bias="0.023" />


    <Button
        android:id="@+id/btnDownNewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_btn_gray"
        android:fontFamily="@font/notosans_regular"
        android:lineSpacingExtra="3sp"
        android:text="@string/btn_down_new_card"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtDownkInputCardNum" />





</androidx.constraintlayout.widget.ConstraintLayout>