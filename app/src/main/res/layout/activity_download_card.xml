<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.download_card.DownloadCardActivity">


    <Button
        android:id="@+id/btnDownBack"
        android:layout_width="13dp"
        android:layout_height="22dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDownTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="207dp"
        android:text="@string/tv_unlock_title"
        android:fontFamily="@font/notosans-black"
        android:textSize="18sp"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/greyish_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edtDownkInputCardNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDownTitle" />

    <Button
        android:id="@+id/btnDownNewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_down_newcard"
        app:layout_constraintStart_toStartOf="@id/edtDownkInputCardNum"
        app:layout_constraintTop_toBottomOf="@id/edtDownkInputCardNum" />




</androidx.constraintlayout.widget.ConstraintLayout>