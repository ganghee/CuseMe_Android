<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectSortFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSelectSortConfirm"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/mainpink"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans-regular"
                android:lineSpacingExtra="6sp"
                android:text="완료"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/btnSelectSortSetting"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/btn_managerhome_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnSelectSortConfirm" />

    <androidx.cardview.widget.CardView
        android:id="@+id/svSelectSortSearch"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#ffffff"
        android:elevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="@id/btnSelectSortConfirm"
        app:layout_constraintTop_toBottomOf="@id/btnSelectSortConfirm"
        android:layout_marginHorizontal="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- region 보이는순-->
        <View
            android:id="@+id/vSelectSortSeeSort"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/dot_selected"/>
    <!-- endregion-->

    <CheckedTextView
        android:id="@+id/ctvSelectSortSeeSort"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/checked_text_seesort"
        app:layout_constraintStart_toStartOf="@id/svSelectSortSearch"
        app:layout_constraintTop_toBottomOf="@id/svSelectSortSearch" />

    <CheckedTextView
        android:id="@+id/ctvSelectSortCountSort"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/checked_text_seesort"
        app:layout_constraintStart_toEndOf="@id/ctvSelectSortSeeSort"
        app:layout_constraintTop_toBottomOf="@id/svSelectSortSearch" />

    <CheckedTextView
        android:id="@+id/ctvSelectSortNameSort"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/checked_text_seesort"
        app:layout_constraintStart_toEndOf="@id/ctvSelectSortCountSort"
        app:layout_constraintTop_toBottomOf="@id/svSelectSortSearch" />

    <TextView
        android:id="@+id/tvSelectSortAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 카드가 없습니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctvSelectSortNameSort" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSelectSort"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ctvSelectSortNameSort"
        app:layout_constraintTop_toBottomOf="@id/ctvSelectSortNameSort" />

</androidx.constraintlayout.widget.ConstraintLayout>