<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.add_card.AddCardActivity">

    <Button
        android:id="@+id/btnDetailBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="default back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="카드 추가"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnDetailBack"
        app:layout_constraintTop_toTopOf="@id/btnDetailBack" />

    <Button
        android:id="@+id/btnDetailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        app:layout_constraintStart_toStartOf="tvDetailTitle"
        app:layout_constraintEnd_toStartOf="@id/btnDetailDelete"
        app:layout_constraintTop_toTopOf="@id/btnDetailBack" />

    <Button
        android:id="@+id/btnDetailDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnDetailEdit" />

    <ImageView
        android:id="@+id/imgDetailCardImg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="@id/btnDetailBack"
        app:layout_constraintTop_toBottomOf="@+id/btnDetailBack" />

    <TextView
        android:id="@+id/tvDetailCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Default Title"
        app:layout_constraintStart_toStartOf="@+id/imgDetailCardImg"
        app:layout_constraintTop_toBottomOf="@id/imgDetailCardImg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/tvDetailCardTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCardTitle"
        app:layout_constraintBottom_toTopOf="@id/lyDetailRecord">
    <TextView
        android:id="@+id/tvDetailCardDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Default Desc"
        android:maxLines="8"
        />
    </ScrollView>

    <CheckedTextView
        android:id="@+id/ctvDetailAlert"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/test_icon_checked"
        app:layout_constraintTop_toTopOf="@id/tvDetailCardTitle"
        app:layout_constraintEnd_toEndOf="@id/imgDetailCardImg"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyDetailRecord"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

            <TextView
                android:id="@+id/btnDetailRecordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_detail_record_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckedTextView
                android:id="@+id/ctvDetailRecordTTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ctv_detail_record_tts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnDetailRecordTitle"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintTop_toTopOf="@id/btnDetailRecordTitle" />

            <CheckedTextView
                android:id="@+id/ctvDetaliRecordPlay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnDetailRecordTitle"
                app:layout_constraintTop_toBottomOf="@id/btnDetailRecordTitle"
                android:background="@drawable/test_icon_checked"
                android:enabled="false"
                />

            <Button
                android:id="@+id/btnDetailTogRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default start record"
                app:layout_constraintStart_toEndOf="@id/ctvDetaliRecordPlay"
                app:layout_constraintTop_toTopOf="@id/ctvDetaliRecordPlay"
                />

            <Button
                android:id="@+id/btnDetailSaveRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                app:layout_constraintBottom_toBottomOf="@id/btnDetailTogRecord"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnDetailTogRecord"
                app:layout_constraintTop_toTopOf="@+id/btnDetailTogRecord" />

    </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>



