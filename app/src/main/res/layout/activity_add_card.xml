<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <Button
        android:id="@+id/btnAddcardBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="default back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAddcardAdd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드 추가"
        app:layout_constraintStart_toStartOf="@+id/btnAddcardBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAddcardAdd"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnAddcardAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAddcardAdd"
        />

    <ImageView
        android:id="@+id/imgAddcardCardImg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddcardBack"
        app:layout_constraintStart_toStartOf="@id/btnAddcardBack"
        />

    <EditText
        android:id="@+id/edtAddcardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/imgAddcardCardImg"
        app:layout_constraintStart_toStartOf="@+id/imgAddcardCardImg"
        android:hint="카드 제목을 입력해주세요."
        />

    <EditText
        android:id="@+id/edtAddcardDesc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxLines="8"
        app:layout_constraintTop_toTopOf="@id/edtAddcardTitle"
        app:layout_constraintStart_toStartOf="@+id/edtAddcardTitle"
        android:hint="카드 내용을 입력해주세요."
        />

    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의사카드 음성녹음하기"
        app:layout_constraintTop_toBottomOf="@id/edtAddcardDesc"
        app:layout_constraintStart_toStartOf="@id/edtAddcardDesc"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNotice"
        app:layout_constraintStart_toStartOf="@id/tvNotice"/>


</androidx.constraintlayout.widget.ConstraintLayout>